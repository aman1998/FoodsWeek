{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "lib": [
      "dom",
      "es2017"
    ],
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@containers/*": [
        "./src/containers/*"
      ],
      "@common/*": [
        "./src/common/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@api/*": [
        "./src/common/API/*"
      ],
      "@UI/*": [
        "./src/UI/*"
      ],
      "@utils/*": [
        "./src/common/utils/*"
      ],
    },
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "incremental": true,
    "isolatedModules": true,
  },
  "exclude": [
    "dist",
    "out",
    "node_modules",
  ],
  "include": [
    "src",
    "src/declaration.d.ts",
  ],
}
