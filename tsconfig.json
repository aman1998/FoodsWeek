{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "lib": [
      "dom",
      "es2017"
    ],
    "baseUrl": "src",
    // "paths": {
    //   "@components/*": ["components/*"],
    //   "@containers/*": [
    //     "./src/containers/*"
    //   ],
    //   "@common/*": [
    //     "./src/common/*"
    //   ],
    //   "@store/*": ["store/*"],
    //   "@api/*": [
    //     "./src/common/API/*"
    //   ],
    //   "@UI/*": [
    //     "./src/UI/*"
    //   ],
    //   "@utils/*": [
    //     "./src/common/utils/*"
    //   ],
    // },
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "incremental": true,
    "isolatedModules": true,
  },
  "exclude": [
    "dist",
    "out",
    "node_modules",
  ],
  "include": ["src"],
}
